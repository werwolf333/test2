<!DOCTYPE html>
<html>
	<head>
		<meta charset="utf-8">
	    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.4/css/bootstrap.min.css">
	    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.4/css/bootstrap-theme.min.css">
		<script type="text/javascript" src="https://ajax.googleapis.com/ajax/libs/jquery/2.0.3/jquery.min.js"></script>
		<script src="registration.js"></script>
	</head>

	<body>
		<div class="panel panel-default">
			<div class="panel-body">
				<div class="col-sm-6 col-sm-offset-3" id="result_form"></div>
			</div>
		</div>
		<div class="container">
			<div class="row">
				<div class="col-sm-4 col-sm-offset-4">
					<form method="post" id="registration_form" action="">
						<div class="panel panel-default">
							<div class="panel-heading">Форма регистрации</div>
							<div class="panel-body">

								<div class="form-group">
									<label for="login">Логин:</label>
									<input type="text" id="login" name="user_login" class="form-control">
									<div id="user_login_error"></div>
								</div>

								<div class="form-group">
									<label for="password">Пароль:</label>
									<input type="text" id="password" name="user_password" class="form-control">
									<div id="user_password_error"></div>
								</div>

								<div class="form-group">
									<label for="password_repeat">Повтор пароля:</label>
									<input type="text" id="password_repeat" name="user_password_repeat" class="form-control">
									<div id="user_password_repeat_error"></div>
								</div>

								<div class="form-group">
									<label for="email">E-mail:</label>
									<input type="email" id="email" name="user_email" class="form-control">
									<div id="user_email_error"></div>
								</div>

								<div class="form-group">
									<label for="name">Имя:</label>
									<input type="text" id="name" name="user_name" class="form-control">
									<div id="user_name_error"></div>
								</div>

								<button type="submit" class="btn btn-default" id="btn">Готово</button>
								<a href="login" style="margin-left: 120px;">Авторизоваться</a>
								
							</div>
						</div>
					</form>
				</div>
			</div>
		</div>
	</body>
</html>
